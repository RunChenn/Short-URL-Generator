<div class="card mb-3">
    <div class="card-body text-center">
        <i class="fas fa-link" style="font-size:100px;"></i>
    </div>
    <div class="card-body pt-1">
        <form action="/" method="POST">
            <div class="form-group row">
                <label for="originUrl" class="col-sm-2 col-form-label">URL</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control {{#if error}} is-invalid {{/if}}" id="originUrl" name="originUrl" placeholder="請輸入您要縮短的網址" {{#if originURL}} value="{{ originURL }} {{/if}}" required>
                    <div id="validationServer04Feedback" class="invalid-feedback">請輸入正確的網址</div>
                    <button type="submit" class="btn btn-success btn-block mt-3" style="width: 100%;">產生短網址</button>
                </div>
            </div>
        </form>
    </div>
    <div class="card-footer text-muted mt-2">
        <div class="form-group row mt-3">
                <label for="shortenURL" class="col-sm-2 col-form-label">ShortenURL</label>
                <div class="col-sm-10">
                    <div class="form-group">
                        <div class="input-group mb-3">
                        <input type="text" class="form-control" id="shortenURL" name="shortenURL" placeholder="" value="{{ shortenURL }}" disabled="true">
                        <button type="button" id="copyUrlBtn" class="input-group-text {{#if shortenURL}}btn-copy{{/if}}" onClick="copyUrl()">
                            <i class="far fa-copy" style="font-size:20px;"></i>
                        </button>
                        </div>
                    </div>
                </div>
            </div>
    </div>
    <!-- Modal -->
    {{#if inValidUrl}}
        <div class="alert alert-dismissible alert-warning">
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            <h4 class="alert-heading">Warning!</h4>
            <p class="mb-0">請輸入正確的網址</p>
        </div>
    {{/if}}
</div>